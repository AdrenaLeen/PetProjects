<Window x:Class="BinaryResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryResourcesApp"
        mc:Ignorable="d"
        Title="Двоичные ресурсы" Height="500" Width="650"
        Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <ToolBar Height="60" Name="picturePickerToolbar" DockPanel.Dock="Top">
            <Button Name="btnPreviousImage" Height="40" Width="100" BorderBrush="Black" Margin="5" Content="Предыдущее" Click="BtnPreviousImage_Click"/>
            <Button Name="btnNextImage" Height="40" Width="100" BorderBrush="Black" Margin="5" Content="Следующее" Click="BtnNextImage_Click"/>
        </ToolBar>
        <Border BorderThickness="2" BorderBrush="Green">
            <Image Name="imageHolder" Stretch="Fill"/>
        </Border>
    </DockPanel>
</Window>
