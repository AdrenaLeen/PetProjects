<Window x:Class="ButtonTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonTemplate"
        mc:Ignorable="d"
        Title="Шаблоны" Height="350" Width="500">
    <StackPanel>
        <Button Name="myButton" Width="100" Height="100" Click="myButton_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid Name="controlLayout">
                        <Ellipse Name="buttonSurface" Fill="LightBlue"/>
                        <Label Name="buttonCaption" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Content="OK!"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Window>
