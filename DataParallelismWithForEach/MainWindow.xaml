<Window x:Class="DataParallelismWithForEach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataParallelismWithForEach"
        mc:Ignorable="d"
        Title="TPL" Height="350" Width="525">
    <Grid>
        <Label Content="Можете смело печатать здесь, пока обрабатываются изображения..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="200" Margin="15,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="490" AcceptsReturn="True"/>
        <Button Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="15,280,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Button Name="btnProcessImages" Content="Перевернуть изображения" HorizontalAlignment="Right" Margin="0,280,15,0" VerticalAlignment="Top" Width="Auto" Padding="5,2" Click="btnProcessImages_Click"/>
    </Grid>
</Window>
