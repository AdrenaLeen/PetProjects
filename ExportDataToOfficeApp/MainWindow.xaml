<Window x:Class="ExportDataToOfficeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExportDataToOfficeApp"
        mc:Ignorable="d"
        Title="The Office COM Interop App!" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Текущие автомобили" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid Name="dataGridCars" HorizontalAlignment="Left" Height="200" Margin="10,40,0,0" VerticalAlignment="Top" Width="500"/>
        <Button Name="btnAddNewCar" Content="Добавить новый автомобиль" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="Auto" Padding="3,5" Click="btnAddNewCar_Click"/>
        <Button Name="btnExportToExcel" Content="Экспортировать текущие автомобили в Excel" HorizontalAlignment="Right" Margin="0,250,10,0" VerticalAlignment="Top" Width="Auto" Padding="3,5" Click="btnExportToExcel_Click"/>
    </Grid>
</Window>
