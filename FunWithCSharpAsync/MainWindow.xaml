<Window x:Class="FunWithCSharpAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunWithCSharpAsync"
        mc:Ignorable="d"
        Title="Async и Await" Height="350" Width="525">
    <Grid>
        <Button Name="btnCallMethod" Content="Вызвать метод" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="Auto" Padding="5,3" Click="btnCallMethod_Click"/>
        <Button Name="btnVoidMethodCall" Content="Вызов пустого метода" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="Auto" Padding="5,3" Click="btnVoidMethodCall_Click"/>
        <Button Name="btnMutliAwaits" Content="Множество await" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="Auto" Padding="5,3" Click="btnMutliAwaits_Click"/>
        <Label Content="Печатайте здесь!" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtInput" HorizontalAlignment="Left" Height="250" Margin="250,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" AcceptsReturn="True" />
    </Grid>
</Window>
