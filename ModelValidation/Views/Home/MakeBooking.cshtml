@model Appointment

@{ Layout = "_Layout"; }
@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script asp-src-include="lib/jquery-validation/dist/jquery.*.min.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/dist/*.min.js"></script>
}

<div class="bg-primary card-body text-white">
    <h2>Записаться на встречу</h2>
</div>
<form class="card-body" asp-action="MakeBooking" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ClientName">Ваше имя:</label>
        <div><span asp-validation-for="ClientName" class="text-danger"></span></div>
        <input asp-for="ClientName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date">Дата приёма:</label>
        <div><span asp-validation-for="Date" class="text-danger"></span></div>
        <input asp-for="Date" type="text" asp-format="{0:d}" class="form-control" />
    </div>
    <span asp-validation-for="TermsAccepted" class="text-danger"></span>
    <div class="radio form-group">
        <input asp-for="TermsAccepted" />
        <label asp-for="TermsAccepted">Я принимаю условия</label>
    </div>
    <button type="submit" class="btn btn-primary">Создать встречу</button>
</form>