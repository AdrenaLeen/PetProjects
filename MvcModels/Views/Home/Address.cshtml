@model IList<AddressSummary>
@{
    ViewBag.Title = "Адрес";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <form asp-action="Address" method="post">
        @for (int i = 0; i < 3; i++)
        {
            <fieldset class="form-group">
                <legend>Адрес @(i + 1)</legend>
                <div class="form-group">
                    <label>Город:</label>
                    <input name="[@i].City" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Страна:</label>
                    <input name="[@i].Country" class="form-control" />
                </div>
            </fieldset>
        }
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
}
else
{
    <table class="table table-condensed table-bordered table-striped">
        <tr>
            <th>Город</th>
            <th>Страна</th>
        </tr>
        @foreach (var address in Model)
        {
            <tr>
                <td>@address.City</td>
                <td>@address.Country</td>
            </tr>
        }
    </table>
    <a asp-action="Address" class="btn btn-primary">Назад</a>
}