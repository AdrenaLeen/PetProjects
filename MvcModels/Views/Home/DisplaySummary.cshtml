@model AddressSummary
@{
    ViewBag.Title = "Отобразить резюме";
    Layout = "_Layout";
}

<div class="bg-primary card-body">
    <h2>Адрес</h2>
</div>

<table class="table table-condensed table-bordered table-striped">
    <tr>
        <th>Город:</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th>Страна:</th>
        <td>@Model.Country</td>
    </tr>
</table>