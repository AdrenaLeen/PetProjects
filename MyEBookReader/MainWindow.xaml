<Window x:Class="MyEBookReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyEBookReader"
        mc:Ignorable="d"
        Title="Электронная читалка" Height="350" Width="525">
    <Grid>
        <TextBox Name="txtBook" HorizontalAlignment="Left" Height="260" Margin="15,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="490"/>
        <Button Name="btnDownload" Content="Скачать" HorizontalAlignment="Right" Margin="0,280,150,0" VerticalAlignment="Top" Width="75" Padding="5,2" Click="btnDownload_Click"/>
        <Button Name="btnGetStats" Content="Получить статистику" HorizontalAlignment="Right" Margin="0,280,12,0" VerticalAlignment="Top" Width="Auto" Padding="5,2" Click="btnGetStats_Click"/>

    </Grid>
</Window>
