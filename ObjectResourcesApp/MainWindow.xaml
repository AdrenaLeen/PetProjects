<Window x:Class="ObjectResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectResourcesApp"
        mc:Ignorable="d"
        Title="Объектные ресурсы" Height="350" Width="525">
    <Window.Resources>
        <RadialGradientBrush x:Key="myBrush">
            <GradientStop Color="#FFC44EC4" Offset="0"/>
            <GradientStop Color="#FF829CEB" Offset="1"/>
            <GradientStop Color="#FF793879" Offset="0.67"/>
        </RadialGradientBrush>
    </Window.Resources>
    <StackPanel Orientation="Horizontal">
        <Button Margin="25" Height="200" Width="200" Content="OK" FontSize="20" Background="{StaticResource myBrush}"/>
        <Button Margin="25" Height="200" Width="200" FontSize="20">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="Отмена!"/>
                <Ellipse Height="100" Width="100" Fill="{StaticResource myBrush}"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
