<Window x:Class="ObjectResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObjectResourcesApp"
        mc:Ignorable="d"
        Title="Объектные ресурсы" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <Button Name="btnOK" Margin="25" Height="200" Width="200" Content="OK" FontSize="20" Background="{DynamicResource myBrush}" Click="btnOK_Click"/>
        <Button Name="btnCancel" Margin="25" Height="200" Width="200" FontSize="20" Click="btnCancel_Click">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="Отмена!"/>
                <Ellipse Height="100" Width="100" Fill="{DynamicResource myBrush}"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
