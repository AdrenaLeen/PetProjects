@model Order

<h2>Оплатить здесь</h2>
<p>Пожалуйста, введите свои данные, и мы отправим ваши товары прямо сейчас!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Доставка</h3>
    <div class="form-group">
        <label>Имя:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <h3>Адрес</h3>
    <div class="form-group">
        <label>Строка 1:</label>
        <input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Строка 2:</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Строка 3:</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Штат:</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Индекс:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <h3>Дополнительные возможности</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Подарочная упаковка этих товаров
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Завершить заказ" />
    </div>
</form>