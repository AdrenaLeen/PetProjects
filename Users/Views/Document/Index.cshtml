@if (Model is IEnumerable<ProtectedDocument>)
{
    <div class="bg-primary card-body text-white">
        <h4>Документы (@User?.Identity?.Name)</h4>
    </div>
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Редактор</th>
            <th></th>
        </tr>
        @foreach (ProtectedDocument doc in Model)
        {
            <tr>
                <td>@doc.Title</td>
                <td>@doc.Author</td>
                <td>@doc.Editor</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-title="@doc.Title">Редактировать</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="bg-primary card-body text-white">
        <h4>Редактирование @Model.Title (@User?.Identity?.Name)</h4>
    </div>
    <div class="card-body">
        Функция редактирования документа будет здесь...
    </div>
    <a asp-action="Index" class="btn btn-primary">Готово</a>
}
<a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Выйти</a>