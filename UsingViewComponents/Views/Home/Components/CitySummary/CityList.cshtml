@model IEnumerable<City>

<table class="table table-condensed table-bordered text-white">
    @foreach (City city in Model)
    {
        <tr>
            <td>@city.Name</td>
            <td class="text-right">@city.Population.ToString("#,###")</td>
        </tr>
    }
    <tr>
        <th>Итого:</th>
        <td class="text-right">@Model.Sum(p => p.Population).ToString("#,###")</td>
    </tr>
</table>