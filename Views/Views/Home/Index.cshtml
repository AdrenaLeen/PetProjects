@model string[]
@{ Layout = "_Layout"; }

@section Header {
    <div class="bg-success">
        @foreach (string str in new[] { "Home", "List", "Edit" })
        {
        <a class="btn btn-sm btn-primary" asp-action="str">@str</a>
        }
    </div>
}

@section Body {
    Это список названий фруктов:
    @foreach (string name in Model)
    {
        <span><b>@name</b></span>
    }
}

@section Footer {
    <div class="bg-success">
        Это футер
    </div>
}