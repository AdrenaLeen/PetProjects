<Window x:Class="WpfControlsAndAPIs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsAndAPIs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="myTabSystem" HorizontalAlignment="Left" Height="280" Margin="10,10,0,0" VerticalAlignment="Top" Width="500">
            <TabItem Header="Ink API">
                <StackPanel Background="#FFE5E5E5">
                    <ToolBar Name="inkToolbar" Height="60">
                        <RadioButton Name="inkRadio" Content="Режим пера!" Height="50" Width="100"/>
                        <RadioButton Name="eraseRadio" Content="Режим ластика!" Height="50" Width="100"/>
                        <RadioButton Name="selectRadio" Content="Режим выбора!" Height="50" Width="100"/>
                        <Separator/>
                        <ComboBox Name="comboColors" Width="100">
                            <ComboBoxItem Content="Красный"/>
                            <ComboBoxItem Content="Зелёный"/>
                            <ComboBoxItem Content="Синий"/>
                        </ComboBox>
                    </ToolBar>
                </StackPanel>
            </TabItem>
            <TabItem Header="Документы">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Привязка данных" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="110">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="DataGrid" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="75">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
