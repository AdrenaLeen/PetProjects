<Window x:Class="WpfStyles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStyles"
        mc:Ignorable="d"
        Title="Окно со стилем!" Height="250" Width="525" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Name="lblInfo" Content="Этот стиль скучный..." Style="{StaticResource BasicControlStyle}" Width="150"/>
        <Button Name="btnTestButton" Content="Да, но мы повторно используем настройки!" Cursor="Help" Style="{StaticResource BasicControlStyle}" Width="300"/>
    </StackPanel>
</Window>
